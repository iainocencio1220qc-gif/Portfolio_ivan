---
const currentPath = Astro.url.pathname;
const nav = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/projects/', label: 'Projects' },
];
---
<header class="header">
  <nav class="nav" aria-label="Main">
    <a href="/" class="nav-brand">Ivan Inocencio</a>
    <ul class="nav-list">
      {nav.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={['nav-link', { 'nav-link--active': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .header {
    border-bottom: 2px solid var(--color-black);
    padding: var(--space-md) var(--space-md);
  }
  .nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
  }
  .nav-brand {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-black);
  }
  .nav-brand:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  .nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: var(--space-md);
  }
  .nav-link {
    font-family: var(--font-body);
    font-weight: 500;
  }
  .nav-link--active {
    font-weight: 600;
  }
</style>
